!!!
%html
  %head
    %meta{:content => 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', :name => 'viewport'}
    %title Backend
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #wrapper
      / Navigation
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "index.html"} SB Admin
        / Top Menu Items
        %ul.nav.navbar-right.top-nav
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-user
              John Smith
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "#"}
                  %i.fa.fa-fw.fa-user
                  Profile
              %li
                %a{:href => "#"}
                  %i.fa.fa-fw.fa-envelope
                  Inbox
              %li
                %a{:href => "#"}
                  %i.fa.fa-fw.fa-gear
                  Settings
              %li.divider
              %li
                %a{:href => "#"}
                  %i.fa.fa-fw.fa-power-off
                  Log Out
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.side-nav
            %li.active
              =link_to places_path do
                %i.fa.fa-fw.fa-map-marker
                Lugares
      #page-wrapper
        .container-fluid
          - if content_for?(:top_action)
            .row
              .col-lg-12
                .pull-righ
                  =yield :top_action
          - if content_for(:page_title)
            .row
              .col-lg-12
                %h2.page-header
                  =yield(:page_title)
                %ol.breadcrumb
                  %li
                    =link_to yield(:page_back) do
                      %i.fa{:class => "#{yield(:page_icon)}"}
                      =yield(:page_title)
                  %li.active
                    %i.fa{:class => "#{yield(:page_action_icon)}"}
                    =yield(:page_action)

          - flash.each do |name, msg|
            .alert{:class => "alert-#{name}", :role => 'alert'}= msg

          = yield
