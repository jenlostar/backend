%ul.nav.nav-tabs{:role => "tablist"}
  %li.active{:role => "presentation"}
    %a{"data-toggle" => "tab", :href => "#place", :role => "tab"} Inicio
  %li{:role => "presentation"}
    %a{"data-toggle" => "tab", :href => "#services", :role => "tab"} Servicios
  %li{:role => "presentation"}
