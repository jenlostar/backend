= simple_form_for @place do |f|
  .form-group= f.input :name, input_html: { class: 'form-control' }
  .form-group= f.input :address, input_html: { class: 'form-control' }
  .form-group= f.input :instructions, input_html: { class: 'form-control' }
  .form-group= f.input :mobile_phone, input_html: { class: 'form-control' }
  .form-group= f.input :land_line, input_html: { class: 'form-control' }
  .form-actions
    =f.button :submit, 'Enviar', class: 'btn-primary'
