.panel.panel-default
  .panel-body
    .search-form
      .row
        .col-xs-8
          .form-group
            %input.form-control{:placeholder => t(:search_place), :type => "text"}
            %i.fa.fa-search
        .col-xs-4
          %a.btn.btn-primary.btn-block{:href => new_place_path}
            %i.fa.fa-plus
            %span= t(:add)
  .list-group
    - @places.each do |place|
      %a.list-group-item{:href => selected_place_path(place), class: "#{' active' if @place.try(:id) === place.id}"}
        %i.fa.fa-3x.fa-building-o.pull-left
        %h5.list-group-item-heading
          = "#{place.name}, #{place.address}"
        %p.list-group-item-text
          = place.description
          = "#{place.land_line} - #{place.mobile_phone}"

