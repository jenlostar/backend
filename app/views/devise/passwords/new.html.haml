.row
  .col-md-5.col-md-offset-3
    .panel.panel-default
      .panel-heading.clearfix
        %h3.panel-title.pull-left
          =t(:forgot_your_password)
      .list-group
        =simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .list-group-item
            =f.label :name, t('simple_form.labels.user.email')
            .list-group-item-heading=f.input_field :email, required: true, autofocus: true, class: 'form-control', autocomplete: 'off'
          .list-group-item
            .list-group-item-heading
              =f.button :submit, t(:forgot_your_password_instructions), class: 'btn-primary'
