.panel.panel-default.bootcards-richtext
  .panel-heading.clearfix
    %h3.panel-title.pull-left
      =t(:bookings)
    .pull-right
      .btn-group
        %a.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          =@filtered_by
          %span.caret
        %ul.dropdown-menu
          %li=link_to 'Pendientes', bookings_path
          %li=link_to 'Confirmadas', approved_bookings_path
          %li=link_to 'Anuladas', canceled_bookings_path
  %table.table.table-striped.table-hover
    %tr
      %th Lugar
      %th Fecha
      %th Cliente
      %th Servicios
      %th Duraci√≥n estimada
      %th
    - @bookings.try(:each) do |booking|
      %tr
        %td(style='word-wrap: break-word')=booking.place.name
        %td(style='white-space: nowrap')=booking.date.strftime('%Y-%m-%d %I:%M %P')
        %td(style='word-wrap: break-word')=booking_user_full_name(booking.user)
        %td(style='word-wrap: break-word')
          %ul
            - booking.booked_services.each do |service|
              %li
                %b=service.service_name
                %br
                =service_time_in_words(service.service_duration)
        %td(style='white-space: nowrap')=booked_services_duration(booking.booked_services)
        %td(style='min-width: 219px')
          .btn-group
            - if booking.confirmed_at.nil? && booking.canceled_at.nil?
              =link_to approve_booking_path(booking), class: 'btn btn-large btn-success', method: :post do
                %i.fa.fa-check
                Confirmar

              =link_to  discard_booking_path(booking), class: 'btn btn-large btn-danger', method: :post do
                %i.fa.fa-trash
                Anular
