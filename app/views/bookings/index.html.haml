.panel.panel-default.bootcards-richtext
  .panel-heading.clearfix
    %h3.panel-title.pull-left
      =t(:bookings)
    .pull-right
      .btn-group
        %a.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          Pendientes
          %span.caret
        %ul.dropdown-menu
          %li
            =link_to '#' do
              Pendientes
          %li
            =link_to '#' do
              Confirmadas
          %li
            =link_to '#' do
              Descartadas
  %table.table.table-striped.table-hover
    %tr
      %th Lugar
      %th Fecha
      %th Cliente
      %th Servicios
      %th Duraci√≥n estimada
      %th
    - @bookings.try(:each) do |booking|
      %tr
        %td=booking.place.name
        %td=booking.date.strftime('%A %d %B  %I:%M %P')
        %td="#{booking.user.first_name} #{booking.user.last_name}"
        %td
          %ul
            - booking.booked_services.each do |service|
              %li
                =service.service_name
                ="(#{service_time_in_words(service.service_duration)})"
        %td=booked_services_duration(booking.booked_services)
        %td
          =link_to '#', class: 'btn btn-large btn-success' do
            %i.fa.fa-check
            Confirmar
          =link_to '#', class: 'btn btn-large btn-danger' do
            %i.fa.fa-trash
            Descartar
